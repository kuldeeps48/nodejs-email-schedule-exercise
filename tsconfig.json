{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "ES6",
      "incremental": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "lib": ["esnext"]
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts"]
  }
  